<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="cacheAdvice" class="edu.hyd.aspect.CacheAdvice" />
	<bean id="performAdvice" class="edu.hyd.aspect.PerformanceAdvice" />
	<bean id="logAroundAdvice" class="edu.hyd.aspect.LogAroundAdvice"/>
	<bean id="target" class="edu.hyd.service.IntrAmtCalculator" />
	<bean id="factory" class="org.springframework.aop.framework.ProxyFactoryBean">
		<property name="target" ref="target" />
		<property name="interceptorNames">
			<list>
				<value>performAdvice</value>
				<value>cacheAdvice</value>
				<value>logAroundAdvice</value>
			</list>
		</property>
	</bean>
</beans>