<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd">

<!-- Advice classes -->

	<bean id="cacheAdvice" class="edu.hyd.aspect.CacheAdvice" />
	<bean id="performAdvice" class="edu.hyd.aspect.PerformanceAdvice" />
	<bean id="logAroundAdvice" class="edu.hyd.aspect.LogAroundAdvice" />
	
<!-- Target classes -->
	
	<bean id="target1" class="edu.hyd.service.Calculate" />
	<bean id="target2" class="edu.hyd.service.FindSquare" />

	<bean id="factory1" class="org.springframework.aop.framework.ProxyFactoryBean">
		<property name="target" ref="target1" />		
		<property name="interceptorNames">
			<list>
				<value>performAdvice</value>
				<value>cacheAdvice</value>
				<value>logAroundAdvice</value>
			</list>
		</property>
		
	</bean>

	<bean id="factory2" class="org.springframework.aop.framework.ProxyFactoryBean">
		<property name="target" ref="target2" />
		<property name="interceptorNames">
			<list>
				<value>performAdvice</value>
				<value>cacheAdvice</value>
				<value>logAroundAdvice</value>
			</list>
		</property>
	</bean>

 </beans>