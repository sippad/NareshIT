<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-3.0.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.3.xsd">
	
	<http use-expressions="true">
		<form-login/><!--  login-page="/loginpage" login-processing-url="/login" default-target-url="/home"/> -->
		<intercept-url pattern="/admin" access="hasRole('ROLE_ADMIN') and hasRole('ROLE_CUST')"/>
		<intercept-url pattern="/cust" access="hasRole('ROLE_CUST')"/>
		<logout logout-success-url="/home" invalidate-session="true" logout-url="/logout"/>
		<http-basic/>
		<remember-me/>
	</http>

	<authentication-manager>
		<authentication-provider>
			<!-- <user-service>
				<user name="admin" password="admin123" authorities="ROLE_ADMIN,ROLE_CUST"/>
				<user name="cust" password="cust123" authorities="ROLE_CUST"/>
			</user-service> -->
			<jdbc-user-service data-source-ref="dsRef" users-by-username-query="select username,password,enabled from user where username=?" 
				authorities-by-username-query="select username,role from user_roles where username=?" role-prefix="ROLE_"/>
		</authentication-provider>
	</authentication-manager>
</beans:beans>