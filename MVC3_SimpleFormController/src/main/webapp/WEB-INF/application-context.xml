<!-- <?xml version="1.0" encoding="UTF-8"?> -->

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<bean id="dtSrc" class="org.apache.commons.dbcp2.BasicDataSource">
		<property name="driverClassName" value="com.mysql.jdbc.Driver" />
		<property name="url" value="jdbc:mysql:///Asif123" />
		<property name="username" value="root" />
		<property name="password" value="root" />
	</bean>

	<bean id="jt" class="org.springframework.jdbc.core.JdbcTemplate">
		<property name="dataSource" ref="dtSrc" />
	</bean>

	<bean id="stDAO" class="com.nit.dao.StudentDAOImpl">
		<property name="template" ref="jt" />
	</bean>

	<bean id="stService" class="com.nit.service.StudentServiceImpl">
		<property name="dao" ref="stDAO" />
	</bean>

</beans>