<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd">
		
		<bean id="handlerMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
			<property name="mappings">
				<props>
					<prop key="register.htm">formController</prop>
				</props>
			</property>			
		</bean>
				
		<bean id="formController" class="com.nit.controller.FormController">
			<property name="successView" value="result" />
			<property name="sessionForm" value="true" />
			<property name="commandClass" value="com.nit.command.StCommand" />
			<property name="commandName" value="stCmd" />
			<property name="validator" ref="formValidator" />
			<property name="service" ref="registrationService"/>
		</bean>
		
		<bean id="formValidator" class="com.nit.validator.FormValidator"/>
		
		<bean id="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
			<property name="prefix" value="/WEB-INF/pages/"/>
			<property name="suffix" value=".jsp"/>			
		</bean>
		
		<bean id="messageSource" class="org.springframework.context.support.ResourceBundleMessageSource">
			<property name="basename" value="/com/nit/validator/formErrors"/>
		</bean>
</beans>