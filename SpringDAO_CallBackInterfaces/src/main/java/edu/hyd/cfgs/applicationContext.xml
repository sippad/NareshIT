<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource">
		<property name="driverClassName" value="oracle.jdbc.driver.OracleDriver" />
		<property name="url" value="jdbc:oracle:thin:@localhost:1521:sys" />
		<property name="username" value="Asif123" />
		<property name="password" value="Asif123" />
	</bean>

	<bean id="template" class="org.springframework.jdbc.core.JdbcTemplate">
		<property name="dataSource" ref="dataSource"/>
	</bean>

	<bean id="dao" class="edu.hyd.dao.EmployeeDAOImpl">
		<property name="jt" ref="template" />
	</bean>

	<bean id="service" class="edu.hyd.service.EmployeeServiceImpl">
		<property name="dao" ref="dao" />
	</bean>
	
</beans>
        